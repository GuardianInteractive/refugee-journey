<div class="scene">
    
    <div class="scene-title">
    <h2>{{ title }}</h2>
    {{#coverCredit}}
        <p class="photocredit">{{ coverCredit }}</p>
    {{/coverCredit}}
    </div>
    <div class="scene-inner">

        <div class="scene-copy">
            {{#insertImg}}
                <img src="{{ insertImg }}" class="insert-image" />
            {{/insertImg}}
            {{@index}}
            {{{ sceneContent }}}
        </div>

        <div class="choices">
            <p class="choice-text">{{ choiceText }}</p>
            <div class="button-container">
                {{#buttons}}
                    <button class="choice-btn" data-destination="{{ destination }}">
                        {{ text }}
                    </button>
                {{/buttons}}
            </div>
        </div>
    </div>
</div>